import java.util.Random;
import java.util.Scanner;
public class rockpaper {
    public static void main(String[] args){
        Random random=new Random();
        Scanner scan=new Scanner(System.in);

        String[] answers={"rock","paper","scissor"};
        String playerChoice;
        String computerChoice;
        String toContinue="yes";
        int computerScore=0;
        int userScore=0;
        do {
            System.out.print("Enter your move (rock,paper,scissor) :");
            playerChoice = scan.nextLine().toLowerCase();
            System.out.println("your choice is :" + playerChoice);

            if (!playerChoice.equals("rock") && !playerChoice.equals("paper") && !playerChoice.equals("scissor")) {
                System.out.println("Invalid option ");
                continue;
            }

            computerChoice = answers[random.nextInt(3)];
            System.out.println("computer choice is :" + computerChoice);
            if (playerChoice.equals(computerChoice)) {
                System.out.println("Its a Tie");
            } else if (playerChoice.equals("rock")&&computerChoice.equals("scissor")|| playerChoice.equals("paper")&&computerChoice.equals("rock")||playerChoice.equals("scissor")&&computerChoice.equals("paper")) {
                System.out.println("--you win--");
                userScore+=1;
            }
            else{
                System.out.println("computer wins");
                computerScore+=1;
            }
            System.out.print("do you want to continue (yes/no)?:");
            toContinue=scan.nextLine();
        }while(toContinue.equals("yes"));
        System.out.println("Thank you for playing....");
        System.out.printf("Player score is %d and Computer score is %d",userScore,computerScore);

        scan.close();
    }
}
